@model BookMVC.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="text-white"
     style="
     background-color:#c05802;
     display:flex;
     flex-direction:column;
     align-self:center;
     width:500px;
     padding:10px;
     border-radius:10px;"
 >
<h1>Deletar</h1>

<h3>Tem certeza que quer deletar o livro ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Preço:
        </dt>
        <dd class = "col-sm-10">
            R$@Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

            <a class="btn btn-dark" asp-action="Index">Voltar</a>
        |
        <button type="submit" value="Delete" class="btn btn-danger" >Deletar</button>
    </form>
</div>

</div>
